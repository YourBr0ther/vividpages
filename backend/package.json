    "@types/bcrypt": "^5.0.0",
    "@types/multer": "^1.4.0",
    "@types/passport": "^1.0.0",
    "@types/passport-google-oauth20": "^2.0.0",
    "@types/cors": "^2.8.0",
    "@types/crypto-js": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.56.0",
